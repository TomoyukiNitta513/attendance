<%= form_for(@user, url: yield(:url)) do |f| %>
  <%= render 'shared/error_messages', object: @user %>

  <%= f.label :name, "氏名" %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :email, "メールアドレス" %>
  <%= f.email_field :email, class: 'form-control' %>

  <%= f.label :password, "パスワード" %>
  <%= f.password_field :password, class: 'form-control' %>

  <%= f.label :password_confirmation, "パスワード確認のため再入力" %>
  <%= f.password_field :password_confirmation, class: 'form-control' %>

  <% if current_user.admin? %>
    <%= f.label :employee_code, "従業員コード" %>
    <%= f.text_field :employee_code, class: 'form-control' %>

    <%= f.label :admin, "管理者権限" %>
    <%= f.check_box :admin, :as => :boolean, checked: false %>

    <%= f.label :payment, "時給" %>
    <%= f.text_field :payment, class: 'form-control' %>
  <% end %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
