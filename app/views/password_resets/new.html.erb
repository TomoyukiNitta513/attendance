<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h3>パスワードを再設定する</h3>
      <div class="form-group">
        <%= form_for(:password_reset, url: password_resets_path) do |f| %>
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, class: 'form-control' %>

          <%= f.submit "送信", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
