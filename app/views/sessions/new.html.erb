<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1 class="h3 mb-3 font-weight-normal">ログイン</h1>
      <div class="form-group">
        <%= form_for(:session, url: login_path) do |f| %>

          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, class: 'form-control',  placeholder: 'name@example.com' %>

          <%= f.label :password, "パスワード" %>
          <%= link_to "パスワードを再設定する", new_password_reset_path %>
          <%= f.password_field :password, class: 'form-control', placeholder: 'パスワード' %>

          <%= f.label :remember_me, class: "checkbox inline" do %>
            <%= f.check_box :remember_me %>
            <span>ログイン情報を記憶する</span>
          <% end %>

          <%= f.submit "ログイン", class: "btn btn-primary" %>
        <% end %>
      </div>
      <p>新しいユーザーですか？
          <%= link_to "サインアップしましょう！", signup_path %>
      </p>
    </div>
  </div>
</div>
