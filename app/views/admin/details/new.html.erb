<%= form_with url: admin_details_path do |f| %>
<div class="form-group">
  <%= f.hidden_field :user_id, value: @detail.user_id %>

  <%= f.label :registration_date, "登録月次" %>
  <%= f.date_select :registration_date,
        value: Date.today, discard_day: true, class: 'form-control' %>

  <%= f.label :carfare, "交通費" %>
  <%= f.number_field :carfare, class: 'form-control' %>

  <%= f.label :income_tax, "所得税" %>
  <%= f.number_field :income_tax, class: 'form-control' %>

  <%= f.submit '登録', class: 'btn btn-primary' %>
</div>
<% end %>
