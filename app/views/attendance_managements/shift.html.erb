<div class="container">
  <!-- <p>勤怠日付</p>
  <%#= form_tag(shift_attendance_managements_path, method: :get) do %>
  <p>
    <%#= month_field params[:search] %>
    <%#= submit_tag "検索", :attendance_date => nil %>
  </p>
  <%# end %> -->
  <h3><%= current_user.name %></h3>
  <div>
    <span>
      <%= link_to "前月", shift_attendance_managements_path(s_month: 'previous'), method: :post %>
    </span> |
    <span>
      <%= link_to "翌月", shift_attendance_managements_path(s_month: 'next'), method: :post %>
    </span>
  </div>
  <div class="input-form">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>出勤日</th><th>出勤時間</th><th>退勤時間</th><th></th>
        </tr>
      </thead>
      <tbody>
        <% @attendance_managements.each do |a| %>
        <tr>
          <td><%= a.attendance_date.strftime("%Y年%m月%d日") %></td>
          <td><%= a.sch_attendance.strftime('%H:%M') %></td>
          <td><%= a.sch_leaving.strftime('%H:%M') %></td>
          <td>
            <!-- <%#= link_to "確定", approval_all_attendance_managements_path(approval_flag: true), method: :post %> -->
            <%= link_to "編集", edit_attendance_management_path(a.id), :remote => true %> |
            <%= link_to "削除", attendance_management_path(a.id), method: :delete, data: { confirm: '削除しますか?' } %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div>
      <%= button_to "全てのシフトを確定する", approval_all_attendance_managements_path(approval_flag_all: true), method: :post %>
    </div>
  </div>
</div>
