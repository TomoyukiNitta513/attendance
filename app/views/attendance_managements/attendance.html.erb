<%= form_for @attendance_management do |f| %>
<div class="form-group">
  <%= f.hidden_field :user_id, value: current_user.id %>

  <%= f.label :attendance_date, "出勤日" %>
  <%= f.date_field :attendance_date,
        value: @attendance_management.attendance_date, class: 'form-control' %>

  <%= f.label :res_attendance, "出勤時間" %>
  <%= f.time_field :sch_attendance, value: Time.now, class: 'form-control' %>

  <%= f.label :res_leaving, "退勤時間" %>
  <%= f.time_field :sch_leaving, value: Time.now, class: 'form-control' %>

  <%= f.submit '登録', class: 'btn btn-primary' %>
</div>
<% end %>
