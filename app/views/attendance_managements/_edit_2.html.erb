<%= form_for @attendance_management do |f| %>
<div class="form-group">
  <%= f.label :res_attendance, "出勤時間" %>
  <%= f.time_field :res_attendance,
        value: Time.now, class: 'form-control' %>

  <%= f.label :res_break_in, "休憩開始" %>
  <%= f.time_field :res_break_in,
        value: Time.now, class: 'form-control' %>

  <%= f.label :res_break_out, "休憩終了" %>
  <%= f.time_field :res_break_out,
        value: Time.now, class: 'form-control' %>

  <%= f.label :res_leaving, "退勤時間" %>
  <%= f.time_field :res_leaving,
        value: Time.now, class: 'form-control' %>

  <%= f.submit '登録', class: 'btn btn-primary' %>
</div>
<% end %>
